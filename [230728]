
public class class05 {

	public static void main(String[] args) {
		String greeting="Hello";
		String sentence=greeting+" Professor!"; 
				
		System.out.println(sentence);
		System.out.println(sentence.length());
		System.out.println(sentence.toLowerCase());
		System.out.println(sentence.toUpperCase());
		System.out.println(sentence.replace('l','z'));
		System.out.println(sentence.substring(2));//substring(a)(a부터 끝까지
 		System.out.println(sentence.substring(2,9));//substring(a,b)(a부터 b 전 까지
		
 		System.out.println(sentence.charAt(4));//substring(a)(a부터 끝까지
 		System.out.println(sentence.indexOf("l"));//문자열에서 가장 앞에 있는 아이 반환 .   
 		System.out.println(sentence.indexOf("p"));
 		System.out.println(sentence.lastIndexOf("l"));//문자열에서 가장 뒤에 있는 아이 반환 . 
 		
 		System.out.println(greeting.concat(sentence));// 
 		System.out.println(greeting.equals("hello"));//  
 		System.out.println(greeting.equalsIgnoreCase("hello"));//  
 		System.out.println(greeting.compareTo("Aello"));//  
 		System.out.println(greeting.compareTo("Hello"));//  
 		System.out.println(greeting.compareTo("Hezzo"));//  
 		
 		
 		String world="Hello world.";
 		
 		
 		//★1번.
 		
 		System.out.println(world.lastIndexOf("."));
 	 				
 		//*2번
 		
// 		System.out.println(world.toUpperCase());
 		//System.out.println(world.toUpperCase("hello") == world.toUpperCase());
 		
 		if((world.compareTo("Hello world."))==0) {
 			System.out.println((world.compareTo("Hello world.")==0)); 		
 			}
 		else {
 			System.out.println((world.compareTo("Hello world.")==0)); 	
 		}
 			
 		
 		//*3번
 		
 		
 		 
	}

}

//string-변수가 아니다
