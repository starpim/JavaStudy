//while문 사용 방법
//while(조건식){}

/* ((연습 ))
package java_project;

public class study0728 {

	public static void main(String[] args) {
		int i =0;
	while(i<10) {
		i++;
		System.out.println(i);
		
		
	}
	}

}

*/




//** 문제 ** 0부터 100까지 짝수만 출력 //
//내가 푼 거 
package java_project;

public class study0728 {

	public static void main(String[] args) {
		
    int i =0;
    System.out.println("★★★연습문제1 : 0부터 100까지 짝수만 출력-1 (while사용)");
	while(i<100) {
		System.out.println(i);
		i=i+2;
		
		
	}
	 System.out.println("★★★연습문제1 : 0부터 100까지 짝수만 출력-2(for사용)");
		for(int j=0; j<=100; j++) {
			System.out.println(j);
			j++;
	}

}
	}

//=======================================================================================
